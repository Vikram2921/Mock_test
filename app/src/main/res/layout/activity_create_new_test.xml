<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_new_test">
    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_above="@id/next"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/heading"
                android:background="@drawable/shader"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:id="@+id/v"
                    android:layout_width="4dp"
                    android:background="@color/colorAccent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/v"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="Basic exam details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                android:layout_below="@id/heading"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxBackgroundMode="outline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tiw0"
                android:layout_height="wrap_content">
                <EditText
                    android:editable="false"
                    android:text="Mock Test 1"
                    android:textSize="18dp"
                    android:hint="Exam ID"
                    android:padding="14dp"
                    android:id="@+id/examname"
                    android:drawablePadding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tiw0"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxBackgroundMode="outline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tiw"
                android:layout_height="wrap_content">
                <EditText
                    android:text="Mock Test 1"
                    android:textSize="18dp"
                    android:hint="Exam Name"
                    android:padding="14dp"
                    android:id="@+id/examnamefull"
                    android:drawablePadding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:padding="5dp"
                android:layout_below="@id/tiw"
                android:layout_marginLeft="10dp"
                android:id="@+id/datet"
                android:text="Exam Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/ddt"
                android:layout_marginRight="10dp"
                android:background="@drawable/box_back"
                android:layout_below="@id/datet"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="13dp"
                    android:text="00/00/0000"
                    android:textSize="18dp"
                    android:id="@+id/date_of_exam"
                    android:textColor="#000"
                    android:layout_toLeftOf="@id/choose_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/choose_date"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <TextView
                android:padding="5dp"
                android:layout_below="@id/ddt"
                android:layout_marginLeft="10dp"
                android:id="@+id/ttt"
                android:text="Exam start time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/timer"
                android:layout_marginRight="10dp"
                android:background="@drawable/box_back"
                android:layout_below="@id/ttt"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="13dp"
                    android:text="00:00:00 AM"
                    android:textSize="18dp"
                    android:id="@+id/time_of_exam"
                    android:textColor="#000"
                    android:layout_toLeftOf="@id/choose_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/choose_time"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <TextView
                android:padding="5dp"
                android:layout_below="@id/timer"
                android:layout_marginLeft="10dp"
                android:id="@+id/ttt1"
                android:text="Exam ending time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/duration"
                android:layout_marginRight="10dp"
                android:background="@drawable/box_back"
                android:layout_below="@id/ttt1"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="13dp"
                    android:text="00:00:00 AM"
                    android:textSize="18dp"
                    android:id="@+id/duration_of_exam"
                    android:textColor="#000"
                    android:layout_toLeftOf="@id/choose_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/choose_duration"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <TextView
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_below="@id/duration"
                android:layout_marginLeft="10dp"
                android:id="@+id/total_duration"
                android:text="Exam Duration : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:id="@+id/ac"
                android:layout_below="@id/total_duration"
                android:text="Allow Calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:id="@+id/rqr"
                android:layout_below="@id/ac"
                android:text="Require QR code for entering in exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/next"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:text="Proceed to next step"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>